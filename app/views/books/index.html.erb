<div class=notice>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>


<table>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"><th>
  </tr>
 <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><a href="<%=book_path(book.id) %>">Show</a></td>
   <td><%= link_to "Edit", edit_book_path(book.id),class: "btn-link" %></td>
   <td><%= button_to "Distroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-link" %></td>
  </tr>
  <% end %>

</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

    <div>
        <label>Title</label>
    </div>
      <%= f.text_field :title %>

    <div>
        <label>Body</label>
    <div>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %>
<% end %>

